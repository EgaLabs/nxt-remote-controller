<?xml version="1.0" encoding="utf-8" ?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

  <PreferenceCategory android:title="@string/settings_category_server">

    <EditTextPreference
        android:defaultValue="@string/preference_value_address"
        android:dialogTitle="@string/preference_dialog_address"
        android:key="preference_server_address"
        android:summary="@string/preference_summary_address"
        android:title="@string/preference_title_address" />

    <EditTextPreference
        android:defaultValue="@string/preference_value_login"
        android:dialogTitle="@string/preference_dialog_login"
        android:key="preference_server_login"
        android:summary="@string/preference_summary_login"
        android:title="@string/preference_title_login" />

    <EditTextPreference
        android:defaultValue="@string/preference_value_peer"
        android:dialogTitle="@string/preference_dialog_peer"
        android:key="preference_server_peer"
        android:summary="@string/preference_summary_peer"
        android:title="@string/preference_title_peer" />

    <EditTextPreference
        android:dialogTitle="@string/preference_dialog_token"
        android:key="preference_server_token"
        android:summary="@string/preference_summary_token"
        android:title="@string/preference_title_token" />
  </PreferenceCategory>

  <PreferenceCategory android:title="@string/settings_category_visual">

    <ListPreference
        android:defaultValue="@string/preference_value_theme"
        android:entries="@array/theme_names"
        android:entryValues="@array/theme_values"
        android:key="preference_theme"
        android:summary="@string/preference_summary_theme"
        android:title="@string/preference_title_theme" />

    <CheckBoxPreference
        android:defaultValue="@string/preference_value_toast"
        android:key="preference_show_toast"
        android:summary="@string/preference_summary_toast"
        android:title="@string/preference_title_toast" />

    <CheckBoxPreference
        android:defaultValue="@string/preference_value_back_home"
        android:key="preference_back_home"
        android:summary="@string/preference_summary_back_home"
        android:title="@string/preference_title_back_home" />

    <CheckBoxPreference
        android:defaultValue="@string/preference_value_disable_bluetooth"
        android:key="preference_disable_bluetooth"
        android:summary="@string/preference_summary_disable_bluetooth"
        android:title="@string/preference_title_disable_bluetooth" />

    <CheckBoxPreference
        android:defaultValue="@string/preference_value_auto_discovery"
        android:key="preference_auto_discovery"
        android:summary="@string/preference_summary_auto_discovery"
        android:title="@string/preference_title_auto_discovery" />
  </PreferenceCategory>

  <PreferenceCategory android:title="@string/settings_category_misc">

    <EditTextPreference
        android:defaultValue="@string/preference_value_min_signal"
        android:dialogTitle="@string/preference_dialog_min_signal"
        android:inputType="number"
        android:key="preference_minimum_signal"
        android:summary="@string/preference_summary_min_signal"
        android:title="@string/preference_title_min_signal" />

    <EditTextPreference
        android:defaultValue="@string/preference_value_max_signal"
        android:dialogTitle="@string/preference_dialog_max_signal"
        android:inputType="number"
        android:key="preference_maximum_signal"
        android:summary="@string/preference_summary_max_signal"
        android:title="@string/preference_title_max_signal" />
  </PreferenceCategory>

</PreferenceScreen>