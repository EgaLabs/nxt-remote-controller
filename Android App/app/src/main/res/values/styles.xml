    </style>
    <style name="toolbar_style" parent="toolbar_style.base" />

    <style name="toolbar_theme_style.base" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
      <item name="android:textColorPrimary">?git.egatuts.nxtremotecontroller:toolbar_color</item>
      <item name="actionBarSize">@dimen/abc_action_bar_default_height_material</item>
    </style>
    <style name="toolbar_theme_style" parent="toolbar_theme_style.base" />
    <!-- [/Toolbar] -->
  <!-- [/Styles for main_layout.xml] -->


