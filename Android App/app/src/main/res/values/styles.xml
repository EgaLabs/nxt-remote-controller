  <!-- [DrawerArrow]  -->
  <style name="drawer_arrow_style" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="spinBars">true</item>
    <item name="color">?drawer_arrow_color</item>
  </style>
  <!-- [/DrawerArrow] -->

  <!-- [Styles for main_layout.xml]  -->
    <!-- [Toolbar] -->
    <style name="toolbar_style.base" parent="match_w_wrap_h">
