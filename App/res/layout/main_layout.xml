<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                
  <include android:id="@+id/toolbar_element"
           layout="@layout/toolbar"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />
  
  <android.support.v4.widget.DrawerLayout
          android:id="@+id/drawer_element"
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_below="@+id/toolbar_element">
          
    <FrameLayout android:id="@+id/main_container"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent" />
    
    <fragment android:id="@+id/drawer_fragment"
              android:name="git.egatuts.nxtremotecontroller.NavigationDrawerFragment"
              android:layout_width="@dimen/navigation_drawer_width"
              android:layout_height="match_parent"
              android:layout_gravity="start"
              app:layout="@layout/navigation_drawer_fragment" />
    
  </android.support.v4.widget.DrawerLayout>

</RelativeLayout>