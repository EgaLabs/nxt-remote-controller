<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
  <!-- [Common styles]  -->
  <style name="match">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
  </style>
  
  <style name="wrap">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  
  <style name="recycler_view" parent="match">
    <item name="android:scrollbars">vertical</item>
  </style>
    
  <style name="fragment" parent="match">
    <item name="android:layout_gravity">start</item>
  </style>
  
  <style name="row">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  <!-- [/Common styles] -->
  
  
  <!-- [DrawerArrow]  -->
  <style name="drawer_arrow_style" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="spinBars">true</item>
    <item name="color">?drawer_arrow_color</item>
  </style>
  <!-- [/DrawerArrow] -->
  
  
  <!-- [Styles for main_layout.xml]  -->
  
    <!-- [include]  -->
    <!-- [/include] -->
    
    
    <!-- [DrawerLayout]  -->
    <!-- [/DrawerLayout] -->
    
    
    <!-- [FrameLayout]  -->
    <!-- [/FrameLayout] -->
    
    
    <!-- [fragment]  -->
    <style name="fragment_drawer_style" parent="fragment">
      <item name="android:layout_width">?drawer_width</item>
    </style>
    <!-- [/fragment] -->
    
  <!-- [/Styles for main_layout.xml] -->
  
  
  <!-- [Styles for toolbar.xml]  -->
    
    <!-- [Toolbar] -->
    <style name="toolbar_style" parent="wrap">
      <item name="android:background">?toolbar_background</item>
      <item name="android:minHeight">@dimen/abc_action_bar_default_height_material</item>
      <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
      <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>
    <!-- [/Toolbar] -->
    
  <!-- [/Styles for toolbar.xml] -->
  
  
  <!-- [Styles for navigation_drawer_fragment.xml (some may be reusable)]  -->
  
    <!-- [RecyclerView]  -->
    <style name="drawer_recycler_view_style" parent="recycler_view">
      <item name="android:background">?drawer_background</item>
      <item name="android:focusable">true</item>
      <item name="android:clickable">true</item>
      <item name="android:focusableInTouchMode">true</item>
    </style>
    <!-- [/RecyclerView] -->
    
  <!-- [/Styles for navigation_drawer_fragment.xml] -->
  
  
  <!-- [Styles for drawer_item_row.xml]  -->
  
    <!-- [LinearLayout]  -->
    <style name="drawer_layout_style">
      <item name="android:layout_width">match_parent</item>
      <item name="android:layout_height">?drawer_item_height</item>
    </style>
    <!-- [/LinearLayout] -->
    
    
    <!-- [TextView]  -->
    <style name="drawer_item_style" parent="match">
      <item name="android:layout_marginStart">?drawer_item_margin_start</item>
      <item name="android:layout_marginRight">?drawer_item_margin_right</item>
      <item name="android:layout_marginEnd">?drawer_item_margin_end</item>
      <item name="android:layout_marginLeft">?drawer_item_margin_left</item>
      <item name="android:drawablePadding">?drawer_item_icon_padding</item>
      <item name="android:textSize">?drawer_item_text_size</item>
      <item name="android:textColor">?drawer_item_text_color</item>
      <item name="android:alpha">?drawer_item_alpha</item>
      <item name="android:gravity">center_vertical</item>
    </style>
    <!-- [/TextView] -->
  
  <!-- [/Styles for drawer_item_row.xml] -->
  
  
  <!-- [Styles for preference_layout.xml]  -->
  
    <!-- [RelativeLayout]  -->
    <!-- [/RelativeLayout] -->
    
    
    <!-- [fragment]  -->
    <!-- [/fragment] -->
    
  <!-- [/Styles for preference_layout.xml] -->
  
  
  <!-- [Styles for preference_fragment.xml]  -->  
  <!-- [/Styles for preference_fragment.xml] -->
  
  
  <!-- [Styles for bluetooth_enable.xml]  -->
  
    <!-- [LinearLayout]  -->
    <style name="bluetooth_layout_style" parent="match">
      <item name="android:orientation">vertical</item>
      <item name="android:gravity">center</item>
    </style>
    <!-- [/LinearLayout] -->
    
    <!-- [TextView]  -->
    <style name="bluetooth_message_style" parent="wrap">
      <item name="android:textColor">?bluetooth_message_text_color</item>
      <item name="android:textSize">?bluetooth_message_text_size</item>
      <item name="android:gravity">center</item>
    </style>
    <!-- [/TextView] -->
    
    <!-- [Button]  -->
    <style name="bluetooth_button_style" parent="wrap">
      <item name="android:layout_width">wrap_content</item>
    </style>
    <!-- [/Button] -->
    
  <!-- [/Styles for bluetooth_enable.xml] -->
  
  
  <!-- [Styles for scan_fragment.xml (some may be reusable)]  -->
    
    <!-- [RelativeLayout]  -->
    <style name="relative_layout_style" parent="match">
      <item name="android:orientation">horizontal</item>
    </style>
    <!-- [/RelativeLayout] -->
    
    
    <!-- [RecyclerView]  -->
    <!-- [/RecyclerView] -->
    
    
    <!-- [ButtonFloat]  -->
    <style name="float_button_style">
      <item name="android:layout_width">?button_float_radius</item>
      <item name="android:layout_height">?button_float_radius</item>
      <item name="android:layout_marginRight">?button_float_margin</item>
      <item name="android:layout_marginBottom">?button_float_margin</item>
      <item name="android:background">?button_float_background</item>
      <item name="android:layout_alignParentRight">true</item>
      <item name="android:layout_alignParentBottom">true</item>
    </style>
    <!-- [/ButtonFloat] -->
    
  <!-- [/Styles for scan_fragment.xml (and home_fragment.xml)] -->
  
  
  <!-- [Styles for paired_device.xml]  -->
  
    <!-- [LinearLayout]  -->
    <style name="device_layout_style" parent="match">
      <item name="android:orientation">horizontal</item>
      <item name="android:layout_height">?paired_device_height</item>
      <item name="android:layout_margin">?paired_device_margin</item>
    </style>
    <!-- [/LinearLayout] -->
    
    
    <!-- [TextView]  -->
    <style name="device_signal_style" parent="match">
      <item name="android:layout_width">?paired_device_height</item>
      <item name="android:textColor">?paired_device_signal_text_color</item>
      <item name="android:textSize">?paired_device_signal_text_size</item>
      <item name="android:background">?paired_device_signal_shape</item>
      <item name="android:gravity">center</item>
    </style>
    <!-- [/TextView] -->
    
    
    <!-- [LinearLayout]  -->
    <style name="device_info_style" parent="row">
      <item name="android:layout_height">match_parent</item>
      <item name="android:layout_marginLeft">?paired_device_info_margin</item>
      <item name="android:orientation">vertical</item>
      <item name="android:gravity">center</item>
    </style>
    <!-- [/LinearLayout] -->
    
    
    <!-- [TextView]  -->
    <style name="device_name_style" parent="row">
      <item name="android:textSize">?paired_device_name_text_size</item>
      <item name="android:textColor">?paired_device_name_text_color</item>
    </style>
    <!-- [/TextView] -->
    
    
    <!-- [TextView]  -->
    <style name="device_address_style" parent="row">
      <item name="android:textSize">?paired_device_address_text_size</item>
      <item name="android:textColor">?paired_device_address_text_color</item>
    </style>
    <!-- [/TextView] -->
    
  <!-- [/Styles for paired_device.xml] -->
  
  
  <!-- [Base style for theme (common metrics in all themes)]  -->
  <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="drawerArrowStyle">@style/drawer_arrow_style</item>
    <item name="android:textColor">#000000</item>
    <item name="android:windowBackground">@color/window_background</item>
    
    <!-- [Styles that applies to styles defined below]  -->
    <item name="drawer_arrow_color">@color/drawer_arrow</item>
    <item name="drawer_width">240dp</item>
    <item name="drawer_background">@color/drawer_background</item>
    <item name="drawer_item_height">48dp</item>
    <item name="drawer_item_margin_start">16dp</item>
    <item name="drawer_item_margin_right">16dp</item>
    <item name="drawer_item_margin_end">16dp</item>
    <item name="drawer_item_margin_left">16dp</item>
    <item name="drawer_item_icon_padding">16dp</item>
    <item name="drawer_item_text_size">14sp</item>
    <item name="drawer_item_text_color">@color/drawer_item_color</item>
    <item name="drawer_item_alpha">0.87</item>
    <item name="bluetooth_message_text_color">@color/bluetooth</item>
    <item name="bluetooth_message_text_size">20sp</item>
    <item name="button_float_radius">65dp</item>
    <item name="button_float_margin">20dp</item>
    <item name="paired_device_height">70dp</item>
    <item name="paired_device_margin">15dp</item>
    <item name="paired_device_signal_text_color">@color/paired_device_signal</item>
    <item name="paired_device_signal_text_size">25sp</item>
    <item name="paired_device_info_margin">20dp</item>
    <item name="paired_device_name_text_size">20dp</item>
    <item name="paired_device_address_text_size">14dp</item>
    <item name="paired_device_name_text_color">@color/paired_device_name</item>
    <item name="paired_device_address_text_color">@color/paired_device_address</item>
    <!-- [/Styles that applies to styles defined below] -->
  </style>
  
  <style name="AppTheme" parent="AppTheme.Base"></style>
  <!-- [/Base style for theme (common metrics in all themes)] -->
  
  
  <!-- COLOR THEMES -->
  
  <!-- Indigo Theme -->
  <style name="AppTheme.Base.Indigo" parent="AppTheme">
    <item name="colorPrimary">@color/indigo_primary</item>
    <item name="colorPrimaryDark">@color/indigo_primary_dark</item>
    <item name="colorAccent">@color/indigo_accent</item>
    <item name="android:textColorPrimary">@color/indigo_text_primary</item>
    <item name="colorControlNormal">@color/indigo_control_normal</item>
    <item name="colorControlActivated">@color/indigo_control_activated</item>
    <item name="colorControlHighlight">@color/indigo_control_highlight</item>
    
    <!-- [Styles that applies to styles defined below]  -->
    <item name="toolbar_background">@color/indigo_primary</item>
    <item name="button_float_background">@color/indigo_button_float</item>
    <item name="paired_device_signal_shape">@drawable/indigo_connectivity_shape</item>
    <!-- [/Styles that applies to styles defined below] -->
  </style>
  
  <style name="AppTheme.Indigo" parent="AppTheme.Base.Indigo" />
  <!-- Indigo Theme -->

</resources>