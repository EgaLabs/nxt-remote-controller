<?xml version="1.0" encoding="utf-8" ?>
<resources>
  
  <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="spinBars">true</item>
    <item name="color">@android:color/white</item>
  </style>
  
  <style name="ToolBarStyle.Base" parent="">
    <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
  </style>
  
  <style name="ToolBarStyle" parent="ToolBarStyle.Base" />
  
  <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    <item name="android:windowBackground">@color/window_background</item>
    <item name="android:textColor">#000000</item>
  </style>
  
  <style name="AppTheme" parent="AppTheme.Base"></style>
  
  <style name="AppTheme.Base.Indigo" parent="AppTheme">
    <item name="colorPrimary">@color/indigo_primary</item>
    <item name="colorPrimaryDark">@color/indigo_primary_dark</item>
    <item name="colorAccent">@color/indigo_accent</item>
    <item name="android:textColorPrimary">@color/indigo_text_primary</item>
    <item name="colorControlNormal">@color/indigo_control_normal</item>
    <item name="colorControlActivated">@color/indigo_control_activated</item>
    <item name="colorControlHighlight">@color/indigo_control_hightlight</item>
  </style>
  
  <style name="AppTheme.Indigo" parent="AppTheme.Base.Indigo" />

</resources>