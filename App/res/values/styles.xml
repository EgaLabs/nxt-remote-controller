<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
  <!-- [Common styles]  -->
  <style name="match">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
  </style>
  
  <style name="wrap">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  
  <style name="recycler_view" parent="match">
    <item name="android:scrollbars">vertical</item>
  </style>
    
  <style name="fragment" parent="match">
    <item name="android:layout_gravity">start</item>
  </style>
  
  <style name="row">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">match_parent</item>
  </style>
  <!-- [/Common styles] -->
  
  
  <!-- [DrawerArrow]  -->
  <style name="drawer_arrow_style" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="spinBars">true</item>
    <item name="color">@android:color/white</item>
  </style>
  <!-- [/DrawerArrow] -->
  
  
  <!-- [Styles for main_layout.xml]  -->
  
    <!-- [include]  -->
    <!-- [/include] -->
    
    
    <!-- [DrawerLayout]  -->
    <!-- [/DrawerLayout] -->
    
    
    <!-- [FrameLayout]  -->
    <!-- [/FrameLayout] -->
    
    
    <!-- [fragment]  -->
    <style name="fragment_drawer_style" parent="fragment">
      <item name="android:layout_width">240dp</item>
    </style>
    <!-- [/fragment] -->
    
  <!-- [/Styles for main_layout.xml] -->
  
  
  <!-- [Styles for toolbar.xml]  -->
    
    <!-- [Toolbar] -->
    <style name="toolbar_style" parent="wrap">
      <item name="android:background">#3F51B5</item>
      <item name="android:minHeight">@dimen/abc_action_bar_default_height_material</item>
      <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
      <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>
    <!-- [/Toolbar] -->
    
  <!-- [/Styles for toolbar.xml] -->
  
  
  <!-- [Styles for navigation_drawer_fragment.xml (some may be reusable)]  -->
  
    <!-- [RecyclerView]  -->
    <style name="drawer_recycler_view_style" parent="recycler_view">
      <item name="android:background">#F2F2F2</item>
      <item name="android:focusable">true</item>
      <item name="android:clickable">true</item>
      <item name="android:focusableInTouchMode">true</item>
    </style>
    <!-- [/RecyclerView] -->
    
  <!-- [/Styles for navigation_drawer_fragment.xml] -->
  
  
  <!-- [Styles for drawer_item_row.xml]  -->
  
    <!-- [LinearLayout]  -->
    <style name="drawer_layout_style">
      <item name="android:layout_width">match_parent</item>
      <item name="android:layout_height">48dp</item>
    </style>
    <!-- [/LinearLayout] -->
    
    
    <!-- [TextView]  -->
    <style name="drawer_item_style" parent="match">
      <item name="android:layout_marginStart">16dp</item>
      <item name="android:layout_marginRight">16dp</item>
      <item name="android:layout_marginEnd">16dp</item>
      <item name="android:layout_marginLeft">16dp</item>
      <item name="android:drawablePadding">16dp</item>
      <item name="android:textSize">14sp</item>
      <item name="android:textColor">#000000</item>
      <item name="android:alpha">0.87</item>
      <item name="android:gravity">center</item>
    </style>
    <!-- [/TextView] -->
  
  <!-- [/Styles for drawer_item_row.xml] -->
  
  
  <!-- [Styles for preference_layout.xml]  -->
  
    <!-- [RelativeLayout]  -->
    <!-- [/RelativeLayout] -->
    
    
    <!-- [fragment]  -->
    <!-- [/fragment] -->
    
  <!-- [/Styles for preference_layout.xml] -->
  
  
  <!-- [Styles for preference_fragment.xml]  -->  
  <!-- [/Styles for preference_fragment.xml] -->
  
  
  <!-- [Styles for bluetooth_enable.xml]  -->
  
    <!-- [LinearLayout]  -->
    <style name="bluetooth_layout_style" parent="match">
      <item name="android:orientation">vertical</item>
      <item name="android:gravity">center</item>
    </style>
    <!-- [/LinearLayout] -->
    
    <!-- [TextView]  -->
    <style name="bluetooth_message_style" parent="wrap">
      <item name="android:textColor">#333333</item>
      <item name="android:textSize">20sp</item>
      <item name="android:gravity">center</item>
    </style>
    <!-- [/TextView] -->
    
    <!-- [Button]  -->
    <style name="bluetooth_button_style" parent="wrap">
      <item name="android:layout_width">wrap_content</item>
    </style>
    <!-- [/Button] -->
    
  <!-- [/Styles for bluetooth_enable.xml] -->
  
  
  <!-- [Styles for scan_fragment.xml (some may be reusable)]  -->
    
    <!-- [RelativeLayout]  -->
    <style name="relative_layout_style" parent="match">
      <item name="android:orientation">horizontal</item>
    </style>
    <!-- [/RelativeLayout] -->
    
    
    <!-- [RecyclerView]  -->
    <!-- [/RecyclerView] -->
    
    
    <!-- [ButtonFloat]  -->
    <style name="float_button_style">
      <item name="android:layout_width">65dp</item>
      <item name="android:layout_height">65dp</item>
      <item name="android:layout_marginRight">20dp</item>
      <item name="android:layout_marginBottom">20dp</item>
      <item name="android:background">#33B5E5</item>
      <item name="android:layout_alignParentRight">true</item>
      <item name="android:layout_alignParentBottom">true</item>
    </style>
    <!-- [/ButtonFloat] -->
    
  <!-- [/Styles for scan_fragment.xml (and home_fragment.xml)] -->
  
  
  <!-- [Styles for paired_device.xml]  -->
  
    <!-- [LinearLayout]  -->
    <style name="device_layout_style" parent="match">
      <item name="android:orientation">horizontal</item>
      <item name="android:layout_height">70dp</item>
      <item name="android:layout_margin">15dp</item>
    </style>
    <!-- [/LinearLayout] -->
    
    
    <!-- [TextView]  -->
    <style name="device_signal_style" parent="match">
      <item name="android:layout_width">70dp</item>
      <item name="android:textColor">#FFFFFF</item>
      <item name="android:textSize">25sp</item>
      <item name="android:background">@drawable/indigo_connectivity_shape</item>
      <item name="android:gravity">center</item>
    </style>
    <!-- [/TextView] -->
    
    
    <!-- [LinearLayout]  -->
    <style name="device_info_style" parent="row">
      <item name="android:layout_marginLeft">20dp</item>
      <item name="android:orientation">vertical</item>
      <item name="android:gravity">center</item>
    </style>
    <!-- [/LinearLayout] -->
    
    
    <!-- [TextView]  -->
    <style name="device_name_style" parent="row">
      <item name="android:textSize">20sp</item>
      <item name="android:textColor">#000000</item>
    </style>
    <!-- [/TextView] -->
    
    
    <!-- [TextView]  -->
    <style name="device_address_style" parent="row">
      <item name="android:textSize">14sp</item>
      <item name="android:textColor">#999999</item>
    </style>
    <!-- [/TextView] -->
    
  <!-- [/Styles for paired_device.xml] -->
  
  
  <!-- [Base style for theme (common metrics in all themes)]  -->
  <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="drawerArrowStyle">@style/drawer_arrow_style</item>
    <item name="android:textColor">#000000</item>
  </style>
  
  <style name="AppTheme" parent="AppTheme.Base"></style>
  <!-- [/Base style for theme (common metrics in all themes)] -->
  
  
  <!-- COLOR THEMES -->
  
  <!-- Indigo Theme -->
  <style name="AppTheme.Base.Indigo" parent="AppTheme">
    <item name="colorPrimary">#3F51B5</item>
    <item name="colorPrimaryDark">#132584</item>
    <item name="colorAccent">#05114F</item>
    <item name="android:textColorPrimary">#474747</item>
    <item name="colorControlNormal">#3F51B5</item>
    <item name="colorControlActivated">#05114F</item>
    <item name="colorControlHighlight">#3F05114F</item>
  </style>
  
  <style name="AppTheme.Indigo" parent="AppTheme.Base.Indigo" />
  <!-- Indigo Theme -->

</resources>