<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
  
    
  <!-- [CustomStylesForViews] -->
  <style name="connectivity_layout_style">
    <item name="android:orientation">horizontal</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">?connectivity_layout_height</item>
    <item name="android:layout_margin">?connectivity_layout_margin</item>
  </style>
  
  <style name="connectivity_style">
    <item name="android:layout_width">?connectivity_layout_height</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">?connectivity_color</item>
    <item name="android:textSize">?connectivity_text_size</item>
    <item name="android:background">?connectivity_background</item>
  </style>
  
  <style name="device_info_layout_style">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_marginLeft">?device_info_layout_margin_left</item>
    <item name="android:orientation">vertical</item>
    <item name="android:gravity">center</item>
  </style>
  
  <style name="device_info_style">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  <style name="device_info_style_name" parent="device_info_style">
    <item name="android:textSize">?paired_device_text_size_name</item>
    <item name="android:textColor">?paired_device_text_color_name</item>
  </style>
  <style name="device_info_style_address" parent="device_info_style">
    <item name="android:textSize">?paired_device_text_size_address</item>
    <item name="android:textColor">?paired_device_text_color_address</item>
  </style>
  
  <style name="list_divider_style">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:background">?android:attr/listDivider</item>
  </style>
  <!-- [/CustomStylesForViews] -->
  
  
  <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="spinBars">true</item>
    <item name="color">@android:color/white</item>
  </style>
  
  <style name="ToolBarStyle.Base" parent="">
    <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
  </style>
  
  <style name="ToolBarStyle" parent="ToolBarStyle.Base" />
  
  <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    <item name="android:windowBackground">@color/window_background</item>
    <item name="android:textColor">#000000</item>
    
    <item name="connectivity_layout_height">@dimen/paired_device_row_size</item>
    <item name="connectivity_layout_margin">@dimen/paired_device_row_margin</item>
    <item name="connectivity_text_size">@dimen/connectivity_text_size</item>
    
    <item name="device_info_layout_margin_left">@dimen/paired_device_info_margin</item>
    <item name="paired_device_text_size_name">@dimen/paired_device_text_size_name</item>
    <item name="paired_device_text_color_name">@color/paired_device_text_color_name</item>
    <item name="paired_device_text_size_address">@dimen/paired_device_text_size_address</item>
    <item name="paired_device_text_color_address">@color/paired_device_text_color_address</item>
  </style>
  
  <style name="AppTheme" parent="AppTheme.Base"></style>
  
  <style name="AppTheme.Base.Indigo" parent="AppTheme">
    <item name="colorPrimary">@color/indigo_primary</item>
    <item name="colorPrimaryDark">@color/indigo_primary_dark</item>
    <item name="colorAccent">@color/indigo_accent</item>
    <item name="android:textColorPrimary">@color/indigo_text_primary</item>
    <item name="colorControlNormal">@color/indigo_control_normal</item>
    <item name="colorControlActivated">@color/indigo_control_activated</item>
    <item name="colorControlHighlight">@color/indigo_control_highlight</item>
    
    <item name="connectivity_background">@drawable/indigo_connectivity_shape</item>
    <item name="connectivity_color">@color/connectivity_color</item>
    
    
  </style>
  
  <style name="AppTheme.Indigo" parent="AppTheme.Base.Indigo" />

</resources>